<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_anno_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_switch_textview_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/all"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/default_background" />

        <TextView
            android:id="@+id/tv_anno_unread"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_switch_textview_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/unread"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/default_background" />

        <TextView
            android:id="@+id/tv_anno_readed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_switch_textview_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/readed"
            android:textSize="15sp" />
    </LinearLayout>

    <com.mo.mobileoffice.common.widget.DefaultListView
        android:id="@+id/lv_announce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent" />

</LinearLayout>